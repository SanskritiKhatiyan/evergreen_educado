<%- include("../partials/header") %>

<div class="d-flex justify-content-center">
	<form action="/cat" method="POST" class="form py-3">
		<h1 class="mb-4">Add CAT Book</h1>
		<div class="form-group">
			<label><b>Name of book</b></label>
			<input type="text" name="cat[name]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Description of book</b></label>
			<input type="text" name="cat[desc]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Author's Name</b></label>
			<input type="text" name="cat[author]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Price</b></label>
			<input type="text" name="cat[price]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Book cover</b></label>
			<input type="text" name="cat[cover]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Book ID</b></label>
			<input type="text" name="cat[bookId]" class="form-control" required>
		</div>
		<div>
			<button type="submit" class="btn btn-dark">Submit</button>
		</div>
	</form>
</div>

<%- include("../partials/footer") %>